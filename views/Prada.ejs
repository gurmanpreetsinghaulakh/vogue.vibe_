    <button class="back-to-top" id="backToTopBtn">&#8679;</button>

    <script>
    gsap.registerPlugin(ScrollTrigger);

    // Hero Animation
    gsap.from(".hero-content h1", {
        opacity: 0,
        y: -40,
        duration: 1,
        ease: "power3.out"
    });
    gsap.from(".hero-content p", {
        opacity: 0,
        y: 20,
        delay: 0.2,
        duration: 1,
        ease: "power3.out"
    });
    gsap.from(".lux-btn", {
    opacity: 0,
    y: 30,
    delay: 0.4,
    duration: 1,
    ease: "power3.out",
    onComplete: () => gsap.set(".lux-btn", { clearProps: "all" })   // fixes glitch
});


    // Product Grid Animation
    gsap.from(".product-card", {
        scrollTrigger: {
            trigger: ".product-grid",
            start: "top 85%"
        },
        opacity: 0,
        scale: 0.8,
        y: 30,
        stagger: 0.15,
        duration: 0.8,
        ease: "power2.out"
    });

    // Back to Top Button
    const backToTopBtn = document.getElementById('backToTopBtn');
    window.addEventListener('scroll', () => {
        if (window.scrollY > 300) {
            backToTopBtn.style.display = 'block';
        } else {
            backToTopBtn.style.display = 'none';
        }
    });
    backToTopBtn.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });

    // Add to Cart
    const cartIcon = document.querySelector('.cart-icon');
    const cart = document.createElement('div');
    cart.style.position = 'fixed';
    cart.style.top = '70px';
    cart.style.right = '-350px';
    cart.style.width = '300px';
    cart.style.background = '#111';
    cart.style.padding = '15px';
    cart.style.borderRadius = '10px';
    cart.style.boxShadow = '0 4px 8px rgba(0,0,0,0.3)';
    cart.style.zIndex = '10000';
    cart.style.transition = 'right 0.4s ease';
    cart.innerHTML = `
        <h4 style="color:#E5C07B; text-align:center;">🛒 Your Cart</h4>
        <ul class="cart-list" style="list-style:none; padding:10px 0;"></ul>
        <div style="text-align:center;">
            <button class="checkout-btn" style="margin-top:10px;background:green;color:#fff;border:none;padding:8px 15px;border-radius:5px;cursor:pointer;">Checkout</button>
            <button class="close-cart" style="margin-top:10px;background:red;color:#fff;border:none;padding:8px 15px;border-radius:5px;cursor:pointer;">Close</button>
        </div>
    `;
    document.body.appendChild(cart);

    cartIcon.addEventListener('click', () => {
        gsap.to(cart, { right: '30px', duration: 0.4 });
    });
    cart.querySelector('.close-cart').addEventListener('click', () => {
        gsap.to(cart, { right: '-350px', duration: 0.4 });
    });

    document.querySelectorAll('.add-to-cart').forEach(button => {
    button.addEventListener('click', () => {
        const card = button.closest('.product-card');
        const title = card.querySelector('h3').textContent;
        const price = card.querySelector('.product-price').textContent;
        const imageSrc = card.querySelector('img').src;

        const cartList = cart.querySelector('.cart-list');

        // Check if product already exists in cart
        let existingItem = Array.from(cartList.children).find(li =>
            li.querySelector('.cart-title')?.textContent === title
        );

        if (existingItem) {
            //Increase quantity if item already exists
            let qtyElem = existingItem.querySelector('.item-qty');
            qtyElem.textContent = parseInt(qtyElem.textContent) + 1;
            updateLocalStorageCart();
        } else {
            //Create new cart item
            const cartItem = document.createElement('li');
            cartItem.style.display = 'flex';
            cartItem.style.alignItems = 'center';
            cartItem.style.marginBottom = '10px';
            cartItem.innerHTML = `
                <img src="${imageSrc}" style="width:50px;height:50px;object-fit:cover;margin-right:10px;border-radius:5px;">
                <div>
                    <p class="cart-title" style="margin:0;font-size:14px;color:#fff;">${title}</p>
                    <p style="margin:0;font-size:12px;color:#aaa;">${price}</p>
                    <p style="margin:0;font-size:12px;color:#E5C07B;">Qty: <span class="item-qty">1</span></p>
                </div>
                <button class="remove-btn" style="margin-left:auto;color:red;background:none;border:none;font-size:18px;cursor:pointer;">&#10005;</button>
            `;
            cartList.appendChild(cartItem);

            gsap.from(cartItem, { opacity: 0, x: 50, duration: 0.5 });
            updateLocalStorageCart();
        }

        //Always open cart when adding
        gsap.to(cart, { right: '30px', duration: 0.4 });

        //Attach remove button logic with quantity check
        cart.querySelectorAll('.remove-btn').forEach(btn => {
            btn.onclick = function() {
                const item = btn.closest('li');
                const qtyElem = item.querySelector('.item-qty');
                const qty = parseInt(qtyElem.textContent);

                if (qty > 1) {
                    qtyElem.textContent = qty - 1;  // reduce qty
                } else {
                    item.remove();  // remove item if qty = 1
                }
                updateLocalStorageCart();
            };

        });
    });
});

//Save cart to localStorage
function updateLocalStorageCart() {
    const cartItems = [];
    document.querySelectorAll('.cart-list li').forEach(item => {
        cartItems.push({
            title: item.querySelector('.cart-title').textContent,
            price: item.querySelector('p:nth-of-type(2)').textContent,
            image: item.querySelector('img').src,
            quantity: item.querySelector('.item-qty').textContent
        });
    });
    localStorage.setItem('pradaCart', JSON.stringify(cartItems));
}



