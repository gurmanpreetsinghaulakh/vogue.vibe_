        .add-to-cart:hover {
            background-color: #d4af37;
            color: #000;
        }

        @media(max-width: 768px){
            .product-grid {
                grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
                gap: 20px;
            }
        }
        .cart-button {
  position: fixed;
  top: 15px;
  right: 20px;
  background-color: #ff6f61;
  color: white;
  padding: 10px 15px;
  border-radius: 5px;
  z-index: 1000;
  transition: opacity 0.3s ease;
}

.cart-button.hidden {
