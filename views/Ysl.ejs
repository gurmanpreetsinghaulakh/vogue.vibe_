        }

        /* Luxury Navbar */
        .lux-navbar {
            position: fixed;
            top: 0;
            width: 100%;
            padding: 20px 0;
            background: rgba(0, 0, 0, 0.9);
            z-index: 9999;
            border-bottom: 1px solid #d4af37;
        }
        .lux-container {
            max-width: 1300px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 30px;
        }
        .logo {
            font-family: 'Didot', serif;
            font-size: 2.5rem;
            color: #d4af37;
            text-decoration: none;
        }
        .lux-menu {
            display: flex;
            gap: 30px;
            list-style: none;
        }
        .lux-menu li a {
            color: #F8F8F8;
            text-transform: uppercase;
            font-weight: 500;
            text-decoration: none;
            font-size: 0.95rem;
            transition: color 0.3s ease;
        }
        .lux-menu li a:hover {
            color: #d4af37;
        }
        .lux-icons i {
            font-size: 1.2rem;
            color: #F8F8F8;
            margin-left: 20px;
            cursor: pointer;
            transition: color 0.3s ease;
        }
        .lux-icons i:hover {
            color: #d4af37;
        }

        /* Hero Section */
        .hero-section {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            position: relative;
        }
        .hero-bg-image {
            position: absolute;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background-image: url('/img17.jpg');
            background-size: cover;
            background-position: center;
            filter: brightness(0.4);
            z-index: -2;
        }
        .hero-overlay {
            position: absolute;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background: rgba(0, 0, 0, 0.6);
            z-index: -1;
        }
        .hero-content h1 {
            font-family: 'Didot', serif;
            font-size: 5rem;
            color: #d4af37;
            margin-bottom: 20px;
        }
        .hero-content p {
            font-size: 1.2rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            margin-bottom: 30px;
        }
        .lux-btn {
            display: inline-block;
            padding: 14px 35px;
            border: 2px solid #d4af37;
            color: #d4af37;
            text-transform: uppercase;
            font-weight: 600;
            font-size: 0.95rem;
            letter-spacing: 1px;
            text-decoration: none;
            transition: all 0.4s ease;
        }
        .lux-btn:hover {
            background-color: #d4af37;
            color: #000;
        }

        /* Responsive */
        @media(max-width: 768px) {
            .lux-container {
                flex-direction: column;
                gap: 15px;
            }
            .lux-menu {
                flex-direction: column;
                gap: 10px;
            }
            .hero-content h1 { font-size: 3rem; }
            .hero-content p { font-size: 1rem; }
        }
                /*Product Grid + Cards*/
        #collection {
            padding: 100px 0;
            background-color: #000;
        }
        .section-title {
            text-align: center;
            font-size: 2.5rem;
            font-family: 'Didot', serif;
            color: #d4af37;
            margin-bottom: 60px;
            letter-spacing: 2px;
        }

        .product-grid {
            max-width: 1300px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
            gap: 30px;
            padding: 0 20px;
        }

        .product-card {
            background-color: #111;
            border: 1px solid #222;
            border-radius: 20px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
            overflow: hidden;
            position: relative;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
            display: flex;
            flex-direction: column;
        }
        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.5);
        }
        .product-card img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        .product-card:hover img {
            transform: scale(1.05);
        }

        .product-card-content {
            padding: 20px;
            text-align: center;
        }
