            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            position: relative;
        }
        .hero-bg-image {
            position: absolute;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background-image: url('/img17.jpg');
            background-size: cover;
            background-position: center;
            filter: brightness(0.4);
            z-index: -2;
        }
        .hero-overlay {
            position: absolute;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background: rgba(0, 0, 0, 0.6);
            z-index: -1;
        }
        .hero-content h1 {
            font-family: 'Didot', serif;
            font-size: 5rem;
            color: #d4af37;
            margin-bottom: 20px;
        }
        .hero-content p {
            font-size: 1.2rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            margin-bottom: 30px;
        }
        .lux-btn {
            display: inline-block;
            padding: 14px 35px;
            border: 2px solid #d4af37;
            color: #d4af37;
            text-transform: uppercase;
            font-weight: 600;
            font-size: 0.95rem;
            letter-spacing: 1px;
            text-decoration: none;
            transition: all 0.4s ease;
        }
        .lux-btn:hover {
            background-color: #d4af37;
            color: #000;
        }

        /* Responsive */
