            .lux-container {
                flex-direction: column;
                gap: 15px;
            }
            .lux-menu {
                flex-direction: column;
                gap: 10px;
            }
            .hero-content h1 { font-size: 3rem; }
            .hero-content p { font-size: 1rem; }
        }
                /*Product Grid + Cards*/
