    <script>
    gsap.registerPlugin(ScrollTrigger);

    // Hero Animation
    gsap.from(".hero-content h1", {
        opacity: 0,
        y: -40,
        duration: 1,
        ease: "power3.out"
    });
    gsap.from(".hero-content p", {
        opacity: 0,
        y: 20,
