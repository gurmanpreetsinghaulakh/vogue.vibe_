            color: #d4af37;
            text-decoration: none;
        }
        .lux-menu {
            display: flex;
            gap: 30px;
            list-style: none;
        }
        .lux-menu li a {
            color: #F8F8F8;
            text-transform: uppercase;
            font-weight: 500;
            text-decoration: none;
            font-size: 0.95rem;
            transition: color 0.3s ease;
        }
        .lux-menu li a:hover {
            color: #d4af37;
        }
        .lux-icons i {
            font-size: 1.2rem;
            color: #F8F8F8;
            margin-left: 20px;
            cursor: pointer;
            transition: color 0.3s ease;
        }
        .lux-icons i:hover {
            color: #d4af37;
        }

        /* Hero Section */
