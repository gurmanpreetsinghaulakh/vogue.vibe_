            font-size: 1.2rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            margin-bottom: 30px;
        }
        .lux-btn {
            display: inline-block;
            padding: 14px 35px;
            border: 2px solid #d4af37;
            color: #d4af37;
            text-transform: uppercase;
            font-weight: 600;
            font-size: 0.95rem;
            letter-spacing: 1px;
            text-decoration: none;
            transition: all 0.4s ease;
        }
        .lux-btn:hover {
            background-color: #d4af37;
            color: #000;
        }

        /* Responsive */
