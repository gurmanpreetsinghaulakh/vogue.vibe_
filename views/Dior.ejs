            font-size: 1.2rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            margin-bottom: 30px;
        }
        .lux-btn {
            display: inline-block;
            padding: 14px 35px;
            border: 2px solid #d4af37;
            color: #d4af37;
            text-transform: uppercase;
            font-weight: 600;
            font-size: 0.95rem;
            letter-spacing: 1px;
            text-decoration: none;
            transition: all 0.4s ease;
        }
        .lux-btn:hover {
            background-color: #d4af37;
            color: #000;
        }

        /* Responsive */
        @media(max-width: 768px) {
            .lux-container {
                flex-direction: column;
                gap: 15px;
            }
            .lux-menu {
                flex-direction: column;
                gap: 10px;
            }
            .hero-content h1 { font-size: 3rem; }
            .hero-content p { font-size: 1rem; }
        }
        /*Product Grid + Cards*/
        #collection {
            padding: 100px 0;
            background-color: #000;
        }
        .section-title {
            text-align: center;
            font-size: 2.5rem;
            font-family: 'Didot', serif;
            color: #d4af37;
            margin-bottom: 60px;
            letter-spacing: 2px;
        }

        .product-grid {
            max-width: 1300px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
            gap: 30px;
            padding: 0 20px;
        }

        .product-card {
            background-color: #111;
            border: 1px solid #222;
            border-radius: 20px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
            overflow: hidden;
            position: relative;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
            display: flex;
            flex-direction: column;
        }
        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.5);
        }
        .product-card img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
