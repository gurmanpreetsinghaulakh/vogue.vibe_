<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Luxury Checkout ‚Äì Vogue Vibe</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
  <style>
    :root {
      --bg-dark: #0f0f0f;
      --bg-light: #1e1e1e;
      --primary: #ffffff;
      --accent: #d4af37;
      --accent-light: #f8e7b5;
      --border: #2a2a2a;
      --fade-light: rgba(255, 255, 255, 0.05);
    }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Poppins', sans-serif;
      background: var(--bg-dark);
      color: var(--primary);
      padding: 20px;
    }

    .progress-bar {
      display: flex;
      justify-content: space-between;
      max-width: 700px;
      margin: 40px auto 60px;
      position: relative;
    }
    .progress-bar::before {
      content: "";
      position: absolute;
      top: 14px;
      left: 0;
      right: 0;
      height: 4px;
      background: var(--border);
      z-index: 0;
    }
    .step-label {
      z-index: 1;
      background: var(--bg-dark);
      padding: 0 10px;
      color: #777;
      font-weight: bold;
      text-align: center;
      transition: color 0.3s;
    }
    .step-label.active { color: var(--accent); }
    .step-circle {
      width: 28px;
      height: 28px;
      border-radius: 50%;
      background: #444;
      border: 2px solid var(--accent);
      margin: 0 auto 8px;
    }
    .step-label.active .step-circle {
      background: var(--accent);
    }

    .step-section { display: none; }
    .step-section.active { display: block; }

    .checkout-box {
      max-width: 900px;
      margin: auto;
      background: var(--bg-light);
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 8px 25px rgba(0,0,0,0.3);
    }

    .checkout-box h2 {
      color: var(--accent);
      margin-bottom: 25px;
      font-size: 2rem;
    }

    .cart-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 16px;
      border-bottom: 1px solid #333;
      padding-bottom: 12px;
    }

    .cart-item img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      border-radius: 8px;
      margin-right: 15px;
    }

    .cart-info {
      flex-grow: 1;
      text-align: left;
    }

    .cart-info h4 {
      margin: 0;
      font-size: 1rem;
      font-weight: 600;
      color: var(--primary);
    }

    .total-line {
      font-size: 1.2rem;
      text-align: right;
      margin-top: 20px;
      font-weight: bold;
      color: var(--accent);
    }

    .btn-next {
      margin-top: 30px;
      background: var(--accent);
      color: #000;
      font-weight: 600;
      border: none;
      padding: 14px 30px;
      font-size: 1rem;
      border-radius: 10px;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn-next:hover {
      background: transparent;
      color: var(--accent);
      border: 2px solid var(--accent);
    }

    input, textarea {
      width: 100%;
      padding: 12px;
      margin: 10px 0;
      border-radius: 8px;
      border: 1px solid #444;
      background: #111;
      color: #fff;
    }
  </style>
</head>
<body>

  <!--Progress Bar -->
  <div class="progress-bar">
    <div class="step-label active"><div class="step-circle"></div><div>Cart</div></div>
    <div class="step-label"><div class="step-circle"></div><div>Shipping</div></div>
    <div class="step-label"><div class="step-circle"></div><div>Payment</div></div>
  </div>

  <!--Cart Review -->
  <div class="step-section active" id="step1">
    <div class="checkout-box">
      <h2>üõí Confirm Your Cart</h2>
      <div id="cart-items">
        <!-- Injected from localStorage -->
      </div>
      <div class="total-line">Subtotal: <span id="cart-subtotal">$0</span></div>
      <button class="btn-next" onclick="goToStep(2)">Next: Shipping</button>
    </div>
  </div>

  <!--Shipping Info -->
  <div class="step-section" id="step2">
    <div class="checkout-box">
      <h2>üì¶ Shipping Information</h2>
      <form id="shipping-form">
        <input type="text" placeholder="Full Name" name="name" required>
        <input type="text" placeholder="Address" name="address" required>
        <input type="text" placeholder="City" name="city" required>
        <input type="text" placeholder="Postal Code" name="postal" required>
        <input type="text" placeholder="Country" name="country" required>
      </form>
      <div style="display:flex;justify-content:space-between;gap:10px;margin-top:30px;">
        <button class="btn-next" onclick="goToStep(1)">‚Üê Back</button>
        <button class="btn-next" onclick="goToStep(3)">Next: Payment ‚Üí</button>
      </div>
    </div>
  </div>
  <!--Payment & Coupon -->
  <div class="step-section" id="step3">
    <div class="checkout-box">
      <h2>üí≥ Payment Details</h2>

      <div style="display:flex;gap:10px;margin-bottom:20px;">
        <button class="btn-next" onclick="selectPayment(this)">PayPal</button>
        <button class="btn-next" onclick="selectPayment(this)">Google Pay</button>
        <button class="btn-next selected" onclick="selectPayment(this)">Stripe</button>
      </div>

      <!-- Coupon Code -->
      <div style="display:flex;gap:10px;margin-top:20px;">
        <input type="text" id="couponCode" placeholder="Enter coupon code">
        <button class="btn-next" onclick="applyCoupon()">Apply</button>
      </div>

      <div class="total-line" style="margin-top:30px;">Grand Total: <span id="grand-total">‚Çπ0</span></div>

      <div style="display:flex;justify-content:space-between;gap:10px;margin-top:30px;">
        <button class="btn-next" onclick="goToStep(2)">‚Üê Back</button>
        <button class="btn-next" onclick="placeOrder()">Place Order</button>
      </div>
    </div>
  </div>

  <!--Confirmation Modal -->
  <div class="modal" id="confirmationModal" style="display:none;position:fixed;inset:0;background:rgba(0,0,0,0.8);z-index:999;justify-content:center;align-items:center;">
    <div style="background:#222;color:white;padding:40px;border-radius:15px;width:90%;max-width:500px;text-align:center;">
      <h2 style="color:var(--accent)">üéâ Order Confirmed!</h2>
      <p>Your order has been placed successfully. Thank you for shopping with <strong>Vogue Vibe</strong>!</p>
      <button onclick="closeModal()" class="btn-next" style="margin-top:20px;">Close</button>
    </div>
  </div>

  <script>
    let currentStep = 1;

    function goToStep(step) {
      document.querySelectorAll('.step-section').forEach(s => s.classList.remove('active'));
      document.getElementById('step' + step).classList.add('active');

      const steps = document.querySelectorAll('.step-label');
      steps.forEach((el, idx) => el.classList.toggle('active', idx < step));

      currentStep = step;
    }

    function selectPayment(btn) {
      document.querySelectorAll('.step-section.active .btn-next').forEach(b => b.classList.remove('selected'));
      btn.classList.add('selected');
    }

    function applyCoupon() {
      const code = document.getElementById("couponCode").value.trim().toLowerCase();
      let subtotal = parseFloat(document.getElementById("cart-subtotal").textContent.replace(/[^\d.-]/g, ''));

      if (code === "vogue10") {
        subtotal -= 200;
        alert("Coupon Applied: ‚Çπ200 OFF");
      } else {
        alert("Invalid coupon code.");
      }

      document.getElementById("grand-total").textContent = `‚Çπ${subtotal.toFixed(2)}`;
    }

    function placeOrder() {
      document.getElementById("confirmationModal").style.display = "flex";
    }

    function closeModal() {
      document.getElementById("confirmationModal").style.display = "none";
    }

    // Load Cart Items from LocalStorage
    window.onload = () => {
      const cartItems = JSON.parse(localStorage.getItem("pradaCart")) || [];
      const cartContainer = document.getElementById("cart-items");
      let subtotal = 0;

      cartItems.forEach(item => {
        const price = parseFloat(item.price.replace(/[^\d.-]/g, ''));
        const quantity = parseInt(item.quantity) || 1;
        const total = price * quantity;
        subtotal += total;

        const div = document.createElement("div");
        div.className = "cart-item";
        div.innerHTML = `
          <img src="${item.image}" alt="">
          <div class="cart-info">
            <h4>${item.title}</h4>
            <p>Qty: ${quantity}</p>
          </div>
          <div>${total.toFixed(2)} ‚Çπ</div>
        `;
        cartContainer.appendChild(div);
      });

      document.getElementById("cart-subtotal").textContent = `‚Çπ${subtotal.toFixed(2)}`;
      document.getElementById("grand-total").textContent = `‚Çπ${subtotal.toFixed(2)}`;
    };
  </script>
</body>
</html>
